<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/demo_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="demo list"
        android:onClick="toDemoList"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        app:layout_constraintTop_toBottomOf="@id/demo_list"
        android:text="stack background image"
        android:onClick="stackBg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.andy.apparch.demos.ClipImageView
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="10dp"
        android:scaleType="centerCrop"
        app:leftTopRadius="100dp"
        app:leftBottomRadius="100dp"
        app:rightTopRadius="100dp"
        app:rightBottomRadius="100dp"
        android:src="@drawable/bg_title"
        android:layout_width="100dp"
        android:layout_height="100dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
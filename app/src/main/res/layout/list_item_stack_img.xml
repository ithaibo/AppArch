<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:minHeight="65dp"
    android:background="#ffffff"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:layout_marginBottom="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_avatar"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.andy.apparch.demos.StackFrame
            android:id="@+id/stack_bg_view"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            app:bgDrawable="@mipmap/img_new_tx_2"
            app:bgHeight="90dp"
            app:bgOff="10dp"
            app:bgWidth="90dp"
            tools:stackSize="3"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <com.andy.apparch.demos.ClipImageView
            android:id="@+id/avatar"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:scaleType="centerCrop"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/bg_title"
            app:leftTopRadius="90dp"
            app:rightTopRadius="90dp"
            app:rightBottomRadius="90dp"
            app:leftBottomRadius="90dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
        android:id="@+id/tv_name"
        app:layout_constraintTop_toTopOf="@id/cl_avatar"
        app:layout_constraintRight_toLeftOf="@id/tv_count"
        app:layout_constraintBottom_toBottomOf="@id/cl_avatar"
        tools:text="manager-0"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_count"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_name"
        app:layout_constraintBottom_toBottomOf="@id/tv_name"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="15dp"
        tools:text="count:2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>